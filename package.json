{
  "name": "nix",
  "private": true,
  "version": "1.3.0",
  "description": "typescript hardhat base with conformant linting",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "compile-contract-types": "typechain --target ethers-v5 --out-dir './contracts/types' './contracts/*.json'",
    "build": "npx tsc -b",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test",
    "lint": "npx gts lint",
    "format": "npx prettier --config prettier.config.js --write .",
    "clean": "npx gts clean",
    "fix": "npx gts fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sambacha/solidity-hardhat-template.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart contracts",
    "defi"
  ],
  "author": "SEE CONTRIBUTORS",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/sambacha/solidity-hardhat-template/issues"
  },
  "homepage": "https://github.com/sambacha/solidity-hardhat-template#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "@typechain/ethers-v5": "7.2.0",
    "@typechain/hardhat": "2.3.1",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "^14",
    "babel-eslint": "10.1.0",
    "chai": "4.3.4",
    "chai-bignumber": "3.0.0",
    "chai-bn": "0.3.0",
    "chai-ethers": "0.0.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.1",
    "gts": "^3.1.0",
    "hardhat": "^2.6.7",
    "prettier": "2.4.1",
    "prettier-config-solidity": "1.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.3.0",
    "typechain": "^5.1.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@nomiclabs/hardhat-web3": "^2.0.0"
  }
}
